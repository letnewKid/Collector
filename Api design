openapi: 3.0.0
info:
    version: '1.0.0'
    title: 'Collector Game API'
    description: 'This is the API for Collector'
    termsOfService: "http://na.com"

servers:
- url: "http://localhost:3000"
- description: Development Server
- url: "http://localhost:3000"
- description: Production Server

paths:
    /games:
        get:
            summary: Returns a list of all games owned
            responses: 
                '200':
                    description: This returns an array of all of the elements owned by a user
                    content: 
                        application/json:
                            schema:
                                type: array
                                items:
                                    type: object
                                    properties:
                                        id:
                                            type: integer
                                            format: int64
                                        name:
                                            type: string
                                        qty:
                                            type: integer
                                            format: int32
                                        status:
                                            type: string
                                        console:
                                            type: string
                                        datePurchased:
                                            type: string
                                            format: date
                '404': 
                    description: If there are no games in the users collection
                    content: 
                        application/json:
                            schema:
                                type: object
                                properties: 
                                    error:
                                        type: integer
                                        format: int32
                                    msg:
                                        type: string
    /addGame: 
        post:
            summary: Adds a game to the collection
            requestBody:
                required: true
                content: 
                    application/json:
                        schema:
                            type: object
                             properties:
                                        id:
                                            type: integer
                                            format: int64
                                        name:
                                            type: string
                                        qty:
                                            type: integer
                                            format: int32
                                        status:
                                            type: string
                                        console:
                                            type: string
                                        datePurchased:
                                            type: string
                                            format: date
                                        
            responses:
            '201':
                description: Created game
            '400':
                description: Game not added